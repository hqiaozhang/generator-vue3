{ 
  "compilerOptions": { 
    "target": "esnext", 
    "module": "esnext", 
    "strict": true, 
    "jsx": "preserve", 
    "importHelpers": true, 
    "moduleResolution": "node", 
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true, 
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors":true, 
    "sourceMap": true, 
    "baseUrl": ".",   
    "paths": {
      "@/*": [
        "src/*"
      ]
    }, 
    "lib": [
      "esnext",
      "dom", 
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue", 
  ],
  "exclude": [
    "node_modules"
  ]
}
